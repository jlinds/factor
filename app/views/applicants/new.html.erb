<div class="col-sm-12 col-md-6 col-lg-6">
  <div class="container form home">
    <%= form_for @applicant do |f| %>

      <div class="field">
        <%= f.select :sales, [["$1 to $50,000"], ["$50,001 to $99,999"], ["$100,000 to $150,000"], ["$150,001 to $199,999"], ["$200,000 to $250,000"], ["More than $250,000"]], prompt: "What are your monthly sales?", required: true %>
      </div>

      <br>

      <div class="field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email Address", required: true %>
      </div>

      <br>

      <div class="field">
        <%= f.text_field :name, autofocus: true, :placeholder => "Your Full Name", required: true %>
      </div>

      <br>

      <div class="field">
        <%= f.text_field :company, autofocus: true, :placeholder => "Company Name", required: true %>
      </div>

      <br>

      <div class="field">
        <%= f.text_field :phone, autofocus: true, :placeholder => "Phone Number", required: true %>
      </div>

      <br>

      <div class="hidden">
        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

          <%= f.submit 'Apply Now', :class => "btn btn-primary" %>
      <% end %>
  </div>
</div>